// 77% accepted

#include <iostream>

using namespace std;

long long n,minn = 9200000000000000LL;

long long llen(long long cur){
    long long ans = 0;

    while(cur > 0LL){
        cur = cur/10LL;
        ans++;
    }

    return ans;
}

void rec(long long cur, long long sum){
    if(cur > minn){
        return;
    }

    if(cur < 0){
        return;
    }

    if(llen(cur) > 15LL){
        return;
    }

    if(sum > n){
        return;
    }
    else if(sum == n){
        //cout<<cur<<endl;
        if(cur < minn){
            minn = cur;
        }
        else{
            return;
        }
    }

    rec(cur * 10 + 1, sum + 1);
    rec(cur * 10 + 2, sum + 8);
    rec(cur * 10 + 3, sum + 27);
    rec(cur * 10 + 4, sum + 64);
    rec(cur * 10 + 5, sum + 125);
    rec(cur * 10 + 6, sum + 216);
    rec(cur * 10 + 7, sum + 343);
    rec(cur * 10 + 8, sum + 512);
    rec(cur * 10 + 9, sum + 729);
}

int main()
{
    cin>>n;
    rec(0LL, 0LL);
    cout<<minn<<endl;
    return 0;
}